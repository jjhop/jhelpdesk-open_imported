<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="jhelpdeskPersistenceUnit" transaction-type="RESOURCE_LOCAL">
    <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
    <non-jta-data-source/>
    <class>de.berlios.jhelpdesk.model.User</class>
    <class>de.berlios.jhelpdesk.model.Announcement</class>
    <class>de.berlios.jhelpdesk.model.ArticleCategory</class>
    <class>de.berlios.jhelpdesk.model.Article</class>
    <class>de.berlios.jhelpdesk.model.ArticleComment</class>
    <class>de.berlios.jhelpdesk.model.Ticket</class>
    <class>de.berlios.jhelpdesk.model.TicketCategory</class>
    <class>de.berlios.jhelpdesk.model.TicketEvent</class>
    <class>de.berlios.jhelpdesk.model.TicketComment</class>
    <class>de.berlios.jhelpdesk.model.AdditionalFile</class>
    <class>de.berlios.jhelpdesk.model.TicketFilter</class>
    <class>de.berlios.jhelpdesk.model.LookAndFeelPreferences</class>
    <class>de.berlios.jhelpdesk.model.DisplayListsPreferences</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <!--<property name="openjpa.jdbc.DBDictionary" value=""/>-->
      <!--<property name="openjpa.Log" value="DefaultLevel=TRACE, Tool=INFO"/>-->
    </properties>
  </persistence-unit>
</persistence>
