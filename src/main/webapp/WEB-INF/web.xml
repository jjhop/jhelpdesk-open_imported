<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/helpdesk-context.xml
			/WEB-INF/helpdesk-datasource.xml
			/WEB-INF/helpdesk-servlet.xml
			/WEB-INF/helpdesk-validators.xml
			/WEB-INF/helpdesk-mapping.xml
		</param-value>
	</context-param>

	<filter>
		<filter-name>CharacterEncoding</filter-name>
		<filter-class>
			de.berlios.jhelpdesk.web.filter.EncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>ignore</param-name>
			<param-value>1</param-value>
		</init-param>
	</filter>

	<filter>
		<filter-name>AuthFilter</filter-name>
		<filter-class>
			de.berlios.jhelpdesk.web.filter.AuthFilter
		</filter-class>
	</filter>

	<filter>
		<filter-name>ManagerAccess</filter-name>
		<filter-class>
			de.berlios.jhelpdesk.web.filter.ManagerFilter
		</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>AuthFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>ManagerAccess</filter-name>
		<url-pattern>/manage/</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>CharacterEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!--
		<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
		</listener>
	-->
	<servlet>
		<servlet-name>context</servlet-name>
		<servlet-class>
			org.springframework.web.context.ContextLoaderServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>CewolfServlet</servlet-name>
		<servlet-class>de.laures.cewolf.CewolfRenderer</servlet-class>
		<init-param>
			<param-name>overliburl</param-name>
			<param-value>/js/overlib.js</param-value>
		</init-param>
		<load-on-startup>3</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>helpdesk</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>helpdesk</servlet-name>
		<url-pattern>*.html</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CewolfServlet</servlet-name>
		<url-pattern>/cewolf/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/jsp/errors/err500.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/errors/err404.jsp</location>
	</error-page>

	<error-page>
		<exception-type>de.berlios.jhelpdesk.web.exception.NotAuthorizedAccessException</exception-type>
		<location>/WEB-INF/jsp/errors/not-auth.jsp</location>
	</error-page>
	
	<jsp-config>
		<taglib>
			<taglib-uri>/WEB-INF/cewolf.tld</taglib-uri>
			<taglib-location>/WEB-INF/cewolf.tld</taglib-location>
		</taglib>
	
		<taglib>
			<taglib-uri>/WEB-INF/cewolf-1.1.tld</taglib-uri>
			<taglib-location>/WEB-INF/cewolf-1.1.tld</taglib-location>
		</taglib>
	
		<taglib>
			<taglib-uri>http://jhelpdesk.berlios.de/taglib/auth-tag.tld</taglib-uri>
			<taglib-location>/WEB-INF/auth-tag.tld</taglib-location>
		</taglib>
	
		<taglib>
			<taglib-uri>http://jhelpdesk.berlios.de/taglib/helpdesk-utils.tld</taglib-uri>
			<taglib-location>/WEB-INF/helpdesk-utils.tld</taglib-location>
		</taglib>
	</jsp-config>
</web-app>