<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>jHelpdesk 1.0.GA - OpenSource Edition</display-name>
    <description>
        jHelpdesk - software...
    </description>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/helpdesk-datasource.xml</param-value>
    </context-param>

    <filter>
        <filter-name>CharacterEncoding</filter-name>
        <filter-class>
            de.berlios.jhelpdesk.web.tools.filter.EncodingFilter
        </filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>ignore</param-name>
            <param-value>1</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>
            de.berlios.jhelpdesk.web.tools.filter.AuthFilter
        </filter-class>
    </filter>

    <filter>
        <filter-name>ManagerAccess</filter-name>
        <filter-class>
            de.berlios.jhelpdesk.web.tools.filter.ManagerFilter
        </filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>ManagerAccess</filter-name>
        <url-pattern>/manage/</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>CharacterEncoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>jpaFilter</filter-name>
        <filter-class>
            org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>jpaFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>helpdesk</servlet-name>
        <servlet-class>
            org.springframework.web.servlet.DispatcherServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>helpdesk</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/errors/err500.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/errors/err404.jsp</location>
    </error-page>

    <error-page>
        <exception-type>de.berlios.jhelpdesk.web.NotAuthorizedAccessException</exception-type>
        <location>/WEB-INF/jsp/errors/not-auth.jsp</location>
    </error-page>

    <jsp-config>
        <taglib>
            <taglib-uri>http://jhelpdesk.berlios.de/taglib/auth-tag.tld</taglib-uri>
            <taglib-location>/WEB-INF/tld/auth-tag.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>