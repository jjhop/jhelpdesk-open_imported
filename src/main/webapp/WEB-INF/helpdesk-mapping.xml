				<prop key="/manager/category/edit.html">managerBugCategoryEditCtrl</prop>
				<prop key="/manager/category/new.html">managerBugCategoryEditCtrl</prop>
				<prop key="/manager/category/up.html">managerBugCategoryUpDownCtrl</prop>
				<prop key="/manager/category/down.html">managerBugCategoryUpDownCtrl</prop>
                -->
