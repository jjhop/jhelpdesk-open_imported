<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping"/>
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<!-- akcje zwiazane z bledami -->
				<prop key="/showBugs.html">killerBugsViewController</prop> <!-- lista bledow              -->
				<prop key="/showNewBugs.html">killerNewBugsViewController</prop> <!-- lista nowych bledow -->
				<prop key="/showBugsNotifiedByMe.html">bugsNotifiedByMeViewController</prop> <!-- lista bledow zgłoszonych przeze mnie -->
				<prop key="/showBugsAssignedToMe.html">bugsAssignedToMeViewController</prop> <!-- lista bledow przypisanych do mnie -->
				<prop key="/showNonresolvedBugsAssignedToMe.html">bugsNonresolvedAssignedToMeViewController</prop><!-- nierozwiązane i zgłoszone przez mnie -->
				<prop key="/showNonresolvedBugs.html">bugsNonresolvedViewController</prop>
				<prop key="/newBug.html">killerBugEditController</prop>   <!-- dodanie/edycja bledu      -->
				
				<prop key="/preferences/lookAndFeel.html">preferencesLookAndFeelCtrl</prop>
				<prop key="/preferences/displayLists.html">preferencesDisplayListsCtrl</prop>
				<prop key="/preferences/eventNotify.html">preferencesEventNotifyCtrl</prop>
				<prop key="/preferences/personalData.html">preferencesPersonalDataCtrl</prop>
				
				<!-- akcje zwiazane z zarzadzaniem uzytkownikami i uprawnieniami -->
				<prop key="/manage/users/showAll.html">managerUserShowAllCtrl</prop>   <!-- lista uzytkownikow         -->
				<prop key="/manage/users/show.html">managerUserShowOneCtrl</prop> <!-- szczegoly uzytkownika      -->
				<prop key="/manage/users/edit.html">managerUserEditCtrl</prop>    <!-- dodanie/edycja uzytkownika -->
				<prop key="/manage/users/new.html">managerUserEditCtrl</prop>    <!-- dodanie/edycja uzytkownika -->
				<prop key="/manage/users/remove.html">managerUserDelCtrl</prop>  <!-- usuniecie uzytkownika      -->

				<!-- zarzadzanie kategoriami zgloszen -->
				<prop key="/manage/category/showAll.html">managerBugCategoryShowAllCtrl</prop>
				<prop key="/manage/category/show.html">managerBugCategoryShowOneCtrl</prop>
				<prop key="/manage/category/edit.html">managerBugCategoryEditCtrl</prop>
				<prop key="/manage/category/new.html">managerBugCategoryEditCtrl</prop>
				<prop key="/manage/category/remove.html">managerBugCategoryDelCtrl</prop>
				<prop key="/manage/category/up.html">managerBugCategoryUpDownCtrl</prop>
				<prop key="/manage/category/down.html">managerBugCategoryUpDownCtrl</prop>
				
			</props>
		</property>
	</bean>
</beans>