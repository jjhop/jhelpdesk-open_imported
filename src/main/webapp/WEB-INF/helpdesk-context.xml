<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	
	<!-- themeResolver - do obslugi tematow -->
	<bean
		id="themeResolver"
		class="de.berlios.jhelpdesk.web.commons.HelpdeskThemeResolver">

	</bean>
	
	<!--  charts -->
	<bean
		id="pieChartBugsByNotyfier1"
		class="de.berlios.jhelpdesk.web.charts.BugStatsByNotyfier1DatasetProducer">
		<property name="userDAO">
			<ref bean="hdUserDAO"/>
		</property>
		<property name="bugDAO">
			<ref bean="hdBugDAO"/>
		</property>		
	</bean>
	<bean
		id="pieChartBugsByNotyfier2"
		class="de.berlios.jhelpdesk.web.charts.BugStatsByNotyfier2DatasetProducer">
		<property name="statusDAO">
			<ref bean="hdBugStatusDAO"/>
		</property>
		<property name="userDAO">
			<ref bean="hdUserDAO"/>
		</property>
		<property name="bugDAO">
			<ref bean="hdBugDAO"/>
		</property>		
	</bean>
</beans>
